{% extends 'admin/base.html.twig' %}
{% import "admin/macros/sort-link.html.twig" as sortLink %}
{% block title %}Rooms list
{% endblock %}

{% block body %}
	<div class="flex flex-row justify-between">
		<h1 class="page-title font-bold">Room details</h1>
		<a href="{{ path('room_edit', { id: details.id, currentPage: currentPage }) }}" class="button button-primary">Edit</a>
	</div>
	{% for message in app.flashes('notice') %}
		<div class="flash-notice">
			{{ message }}
		</div>
	{% endfor %}
	<div class="rounded-lg border border-gray-200 mt-4">
		<div class="overflow-x-auto rounded-t-lg">
			<table class="table-details min-w-full lg:min-width-80 divide-y-2 divide-gray-200 bg-white text-sm overflow-x-auto">
				<thead class="text-left rtl:text-right">
					<tr class="h-8">
						<th class="ps-2">
							Key
						</th>
						<th>
							Value
						</th>
					</tr>
				</thead>
				<tbody class="divide-y leading-8 divide-gray-200">
					<tr>
						<td class="font-normal">
							Size
						</td>
						<td class="font-normal">
							{{ details.size }}
						</td>
					</tr>
					<tr>
						<td class="font-normal">
							Persons
						</td>
						<td class="font-normal">
							{{ details.persons }}
						</td>
					</tr>
					<tr>
						<td class="font-normal">
							Bathroom
						</td>
						<td class="font-normal">
							{{ details.bathroom ? "Yes" : "No" }}
						</td>
					</tr>
					<tr>
						<td class="font-normal">
							Fridge
						</td>
						<td class="font-normal">
							{{ details.fridge ? "Yes" : "No" }}
						</td>
					</tr>
					<tr>
						<td class="font-normal">
							Price weekday
						</td>
						<td class="font-normal">
							{{ details.priceWeekday }}
						</td>
					</tr>

					<tr>
						<td class="font-normal">
							Price weekend
						</td>
						<td class="font-normal">
							{{ details.priceWeekend }}
						</td>
					</tr>
					<tr>
						<td class="font-normal">
							Date added
						</td>
						<td class="font-normal">
							{{ details.dateCreated|date("d/m/Y") }}
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	{{ include('admin/partials/modal-confirm.html.twig', { message: 'Are you sure you want to delete this room?' }) }}
{% endblock %}
